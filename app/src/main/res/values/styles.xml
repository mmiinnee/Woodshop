<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!-- Font Size -->

    <style name="text_16sp">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/kanit_font</item>
    </style>

    <style name="text_18sp">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/kanit_font</item>
    </style>

    <style name="text_20sp">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/kanit_font</item>
    </style>

    <style name="text_24sp">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/kanit_font</item>
    </style>

    <!-- Text Style -->

    <style name="text_16sp_white" parent="text_16sp">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_18sp_white" parent="text_18sp">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_20sp_white" parent="text_20sp">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_24sp_white" parent="text_24sp">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_16sp_black" parent="text_16sp">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_18sp_black" parent="text_18sp">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_20sp_black" parent="text_20sp">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_24sp_black" parent="text_24sp">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_16sp_gray" parent="text_16sp">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="text_18sp_gray" parent="text_18sp">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="text_20sp_gray" parent="text_20sp">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="text_24sp_gray" parent="text_24sp">
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>
