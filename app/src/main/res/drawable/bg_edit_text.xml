<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"  android:shape="rectangle">
            <corners android:radius="@dimen/radius_edit_text" />
            <solid android:color="@color/white" />
            <padding
                android:left="@dimen/padding_edit_text_horizontal"
                android:right="@dimen/padding_edit_text_horizontal"
                android:bottom="@dimen/padding_edit_text_vertical"
                android:top="@dimen/padding_edit_text_vertical"/>
            <stroke
                android:color="@color/colorAccent"
                android:width="1dp" />
        </shape>
    </item>

    <item >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="@dimen/radius_edit_text" />
            <solid android:color="@color/white" />
            <padding
                android:left="@dimen/padding_edit_text_horizontal"
                android:right="@dimen/padding_edit_text_horizontal"
                android:bottom="@dimen/padding_edit_text_vertical"
                android:top="@dimen/padding_edit_text_vertical"/>
            <stroke
                android:color="@color/colorAccent"
                android:width="1dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="@dimen/radius_edit_text" />
            <solid android:color="@color/dismiss" />
            <padding
                android:left="@dimen/padding_edit_text_horizontal"
                android:right="@dimen/padding_edit_text_horizontal"
                android:bottom="@dimen/padding_edit_text_vertical"
                android:top="@dimen/padding_edit_text_vertical"/>
            <stroke
                android:color="@color/colorAccent"
                android:width="1dp" />
        </shape>
    </item>

</selector>